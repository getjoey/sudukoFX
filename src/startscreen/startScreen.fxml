<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="startscreen.Controller"
            prefHeight="600.0" prefWidth="600.0" alignment="center" hgap="10" vgap="10">

    <Pane>
       <VBox>
           <Button fx:id="startButton" alignment="center"   prefHeight="75.0" prefWidth="200.0">Start</Button>
           <fx:define>
               <ToggleGroup  fx:id="difficulty" />
           </fx:define>
           <children>
               <RadioButton text="easy" toggleGroup="$difficulty" fx:id="f1"/>
               <RadioButton text="medium" toggleGroup="$difficulty" fx:id="f2"/>
               <RadioButton text="hard" toggleGroup="$difficulty" fx:id="f3"/>
           </children>
       </VBox>
    </Pane>

</GridPane>
